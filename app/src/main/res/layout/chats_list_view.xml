<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:id="@+id/chatid"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/personchatdpid"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp"
            android:src="@drawable/ic_launcher_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/personchatdpid"
        android:layout_alignTop="@id/personchatdpid"
        android:layout_toRightOf="@+id/personchatdpid"
        android:orientation="vertical">


        <TextView
            android:id="@+id/chatpersonnameid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Person Name"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/chatrecentmessageid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:lines="1"
            android:ems="3"
            android:ellipsize="end"
            android:text="chat recent message will be visible here click to see"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            android:textStyle="normal" />

    </LinearLayout>

    <TextView
        android:id="@+id/chattimeid"
        android:layout_alignTop="@+id/personcmntdpid"
        android:layout_alignBottom="@+id/personcmntdpid"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:padding="5dp"
        android:text="45 min ago"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginHorizontal="10dp"
        android:alpha="0.25"
        android:layout_below="@+id/personchatdpid"
        android:layout_marginTop="10dp"
        android:background="@color/colorgrey"/>


</RelativeLayout>

